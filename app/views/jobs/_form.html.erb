<%= form_for @job do |t| %>
  <%= t.label :title %>
  <%= t.text_field :title %>

  <%= t.label :description %>
  <%= t.text_area :description %>

  <%= t.label :contract_type %>
  <%= t.text_field :contract_type %>

  <%= t.label :vacant %>
  <% [ true, false].each do |vacant| %>
      <br>
      <%= t.label vacant %>
      <%= t.radio_button :vacant, vacant %>
    <% end %>

  <% print(:vacant) %>
  <%= t.submit 'Save' %>
<% end %>