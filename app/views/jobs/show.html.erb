<%= @job.title %>
<%= @job.employer.name %>
<%= @job.vacant %>
</br>
<%= session[:employer_id] %>

<% if logged_in? %>
  <% if check? == false && @job.vacant == true %>
    <%= button_to "apply", apply_path %>
  <% else %>
    <%= button_to "apply", apply_path, :disabled => true %>
  <% end %>
<% end %>
<% if !@valid %>
  <%= button_to "save", save_path(@job.id) %>
<% else %>
  <%= button_to "save", save_path(@job.id), :disabled => true %>
<% end %>  